{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Cigars Catalog Schema",
    "type": "array",
    "items": {
      "type": "object",
      "required": ["Cigar Brand", "Cigar Name", "Sizes", "slug"],
      "properties": {
        "description": { "type": "string" },
        "Date Added": { "type": "string", "format": "date" },
        "Cigar Brand": { "type": "string" },
        "Cigar Name": { "type": "string" },
        "Wrapper": { "type": "string" },
        "Binder": { "type": "string" },
        "Filler": { "type": "string" },
        "Flavor_Profile": { "type": "string" },
        "Strength_Profile": {
          "type": "string",
          "enum": ["", "Mild", "Mild-Medium", "Medium", "Medium-Full", "Full"]
        },
        "Podcast_Link": { "type": "string" },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "Sizes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["Size", "In_Stock"],
            "properties": {
              "Size": { "type": "string" },
              "Barcode": {
                "oneOf": [
                  { "type": "string", "pattern": "^\\d+$" }
                ]
              },
              "In_Stock": { "type": "boolean" },
              "Price": {
                "type": "string",
                "pattern": "^[0-9]+(\\.[0-9]{2})$"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
  