{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "Cigar Brand": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": true,
        "missingMessage": "All cigars must have a brand"
      },
      "Cigar Name": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": false,
        "missingMessage": "All cigars must have a name"
      },
      "Wrapper": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": true
      },
      "Binder": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": true
      },
      "Filler": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": true
      },
      "Flavor_Profile": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": false
      },
      "Strength_Profile": {
        "type": "string",
        "inputType": "mapped range",
        "enum": ["", "Mild", "Mild-Medium", "Medium", "Medium-Full", "Full"],
        "zero": true
      },
      "Podcast_Link": {
        "type": "string",
        "inputType": "basic",
        "autosuggest": false
      },
      "Sizes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Size": {
              "type": "string",
              "inputType": "basic",
              "autosuggest": true
            },
            "Barcode": {
              "type": "string",
              "inputType": "basic",
              "autosuggest": false,
              "pattern": "^\\d+$"
            },
            "In_Stock": {
              "type": "boolean",
              "inputType": "checkbox"
            },
            "Price": {
              "type": "string",
              "inputType": "price",
              "pattern": "^[0-9]+(\\.[0-9]{2})?$"
            }
          },
          "required": ["Size"]
        }
      }
    },
    "required": ["Cigar Brand", "Cigar Name"]
  }
  